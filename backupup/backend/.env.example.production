# Production environment example for MuteahhitHub backend
# Copy this file to .env in production and fill values appropriately

NODE_ENV=production
PORT=3001

# Session / Cookie settings
SESSION_SECRET=replace_with_a_long_random_value_generated_by_openssl_or_similar
SESSION_NAME=mthub_session
SESSION_MAX_AGE=14400000    # 4 hours in milliseconds
SESSION_SAMESITE=strict
COOKIE_DOMAIN=yourdomain.com
TRUST_PROXY=true

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# TLS (if you want the Node process to terminate TLS directly)
HTTPS_ENABLED=false
TLS_KEY_PATH=./certs/private-key.pem
TLS_CERT_PATH=./certs/certificate.pem

# Other
FORCE_HTTPS=true
